package com.javassem.service;

import java.util.List;


import com.javassem.domain.ReplyVO;

public interface ReplyService {
	// CRUD 기능의 메소드 구현
	// 글 등록
	Integer insertReply(ReplyVO vo);

	// 글 수정
	void updateReplyVO(ReplyVO vo);

	// 글 삭제
	void deleteReplyVO(ReplyVO vo);

	// 글 상세 조회
	ReplyVO getBoard(ReplyVO vo);

	// 글 목록 조회
	List<ReplyVO> getBoardList(ReplyVO vo);
}